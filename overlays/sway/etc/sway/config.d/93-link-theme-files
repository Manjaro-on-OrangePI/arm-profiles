exec_always {
  'mkdir -p $HOME/.config/termite && ln -s $theme/termite $HOME/.config/termite/config'
  'mkdir -p $HOME/.config/waybar && ln -s $theme/theme.css $HOME/.config/waybar/'
  'mkdir -p $HOME/.config/wlogout && ln -s $theme/theme.css $HOME/.config/wlogout/'
  'mkdir -p $HOME/.config/wofi && ln -s $theme/theme.css $HOME/.config/wofi/'
}
