# enable idle mode
exec $idle

# enable gnome-keyring daemon
exec systemctl --user import-environment && gnome-keyring-daemon --components=ssh\,secrets\,pkcs11 --start

# autostart background applications
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id mako --config $theme/mako
exec --no-startup-id pamac-tray-appindicator
exec --no-startup-id nm-applet --indicator
exec --no-startup-id blueman-applet
exec --no-startup-id mntray
exec --no-startup-id $help --autostart
